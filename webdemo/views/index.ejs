<!DOCTYPE html>
<html>
<head>
    <title>Expense Tracker</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .container { display: flex; gap: 20px; }
        .sidebar { width: 200px; padding: 20px; background: #f5f5f5; }
        .main { flex: 1; }
        .form-group { margin-bottom: 15px; }
        label { display: block; margin-bottom: 5px; }
        input, textarea { width: 100%; padding: 8px; }
        button { padding: 10px 20px; background: #007bff; color: white; border: none; cursor: pointer; }
        .expense-item { padding: 10px; border-bottom: 1px solid #eee; }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <h3>Money Left</h3>
            <h2>$<%= moneyLeft.toFixed(2) %></h2>
        </div>
        
        <div class="main">
            <h1>Expense Tracker</h1>
            
            <form action="/add" method="POST">
                <div class="form-group">
                    <label>Date:</label>
                    <input type="date" name="date" value="<%= today %>" required>
                </div>
                
                <div class="form-group">
                    <label>Income:</label>
                    <input type="number" name="income" step="0.01" placeholder="0.00">
                </div>
                
                <div class="form-group">
                    <label>Expense:</label>
                    <input type="number" name="expense" step="0.01" placeholder="0.00">
                </div>
                
                <div class="form-group">
                    <label>Detail:</label>
                    <textarea name="detail" rows="3"></textarea>
                </div>
                
                <button type="submit">Add Entry</button>
            </form>
            
            <h2>Entries</h2>
            <% expenses.forEach(expense => { %>
                <div class="expense-item">
                    <strong><%= expense.date %></strong><br>
                    Income: $<%= expense.income.toFixed(2) %> | 
                    Expense: $<%= expense.expense.toFixed(2) %><br>
                    <em><%= expense.detail %></em>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
